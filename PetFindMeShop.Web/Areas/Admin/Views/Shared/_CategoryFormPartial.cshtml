@model CategoryFormViewModel


<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group mb-2">
                <label asp-for="Name" class="mb-1"></label>
                <input asp-for="Name" class="form-control" placeholder="Храна за куче">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>

            <div class="text-center">
                @if (ViewData["id"] == null)
                {
                    <input class="btn btn-primary px-4 mt-3" type="submit" value="Добави" />
                }
                else
                {
                    <input class="btn btn-primary px-4 mt-3" type="submit" value="Редактирай" />
                }
            </div>
        </form>
    </div>
</div>