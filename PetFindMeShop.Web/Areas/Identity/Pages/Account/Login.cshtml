@page
@model LoginModel

@{
    ViewData["Title"] = "Вход";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<div class="row d-flex align-items-center justify-content-center mt-4">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label">Имейл</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mt-2">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label">Парола</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox mt-2">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                          Запомни ме
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Вход</button>
                </div>
                <div class="text-center mt-3">
                    <p class="mb-2">
                        Нямате акаунт? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Регистрирайте се</a>
                    </p>
                    @*<p class="mb-2">
                        Забравили сте си паролата? <a id="forgot-password" asp-page="./ForgotPassword">Възтановяване на парола</a>
                    </p>
                    <p class="mb-2">
                        Не сте получили имейл? <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Повторно изпращане</a>
                    </p>*@
                </div>
            </form>
        </section>
    </div>
