@model IEnumerable<ShopViewModel>

@{
    ViewData["Title"] = "Моите магазини";
}

<div class="container mb-4">
    <div class="p-5 bg-light text-center">
        <h1 class="display-4">@ViewData["Title"]</h1>
    </div>

    <div class="row-cols-6 d-flex justify-content-end mt-4 mb-4">
        <a asp-controller="Shop" asp-action="Create" class="btn btn-success">Създай Mагазин</a>
    </div>

    <div class="row row-cols-md-4 w-100">
        @if (!Model.Any())
        {
            <h3 class="lead w-100 text-center">
                Все още нямате създаден магазин.
            </h3>
        }
        else {
            @foreach (var shop in Model)
            {
                <partial name="_MyShopsPartial" model="@shop" />
            }
        }
    </div>
</div>