@{
    ViewBag.Title = "Продукти";
}

<div class="d-flex flex-column align-items-center justify-content-center mt-4 mb-4 text-center">
    <h1>Всички Продукти</h1>

    <form method="get">
        <div class="row mt-4 mb-4">
            <div class="form-group col-md-3 d-flex justify-content-between">
                <div class="form-group d-flex align-items-center">
                    <label @*asp-for="Category"*@></label>
                    <select @*asp-for="Category"*@ class="form-control">
                        <option value="">Всички</option>
                        @*@foreach (var category in Model.Categories)
                        {
                            <option value="@category">@category</option>
                        }*@
                    </select>
                </div>

                <div class="form-group d-flex align-items-center">
                    <label @*asp-for="HousesPerPage"*@></label>
                    <select @*asp-for="HousesPerPage"*@ class="form-control">
                        <option value="3">3</option>
                        <option value="6">6</option>
                        <option value="9">9</option>
                    </select>
                </div>
            </div>

            <div class="form-group d-flex align-items-center col-md-3">
                <label @*asp-for="SearchString"*@></label>
                <input@* asp-for="SearchString"*@ class="form-control" placeholder="Какво търсиш?">
            </div>

            <div class="form-group d-flex align-items-center col-md-3">
                <div class="form-group d-flex align-items-center">
                    <label @*asp-for="HouseSorting"*@></label>
                    <select @*asp-for="HouseSorting"*@ class="form-control">
                        <option value="0">Най-нови</option>
                        <option value="1">Най-стари</option>
                        <option value="2">Цена (Възх)</option>
                        <option value="3">Цена (Низх)</option>
                    </select>
                </div>
            </div>

            <div class="d-flex align-items-center col-md-3">
                <div class="form-group w-100">
                    <input type="submit" value="Search" class="btn btn-primary w-100" />
                </div>
            </div>
        </div>
    </form>

    <h4 class="mt-4 mb-4">Все още няма добавени продукти</h4>

    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item disabled">
                <span class="page-link">Предишна</span>
            </li>
            <li class="page-item active">
                <span class="page-link">
                    1
                    <span class="sr-only"></span>
                </span>
            </li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
                <a class="page-link" href="#">Следваща</a>
            </li>
        </ul>
    </nav>
</div>