@model ProductFormViewModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group mb-2">
                <label asp-for="Title" class="mb-1"></label>
                <input asp-for="Title" class="form-control" placeholder="Легло за куче">
                <span asp-validation-for="Title" class="small text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="ImageName" class="mb-1"></label>
                <input asp-for="ImageName" class="form-control" placeholder="https://...">
                <span asp-validation-for="ImageName" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" class="form-control">
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AvailableQuantity"></label>
                <input type="number" value="@(Model.AvailableQuantity != 0 ? Model.AvailableQuantity : 1)" min="1" asp-for="AvailableQuantity" class="form-control">
                <span asp-validation-for="AvailableQuantity" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price"></label>
                <input type="number" value="@(Model.Price != 0 ? Model.Price : 1)" min="0.01" step="0.01" asp-for="Price" class="form-control">
                <span asp-validation-for="Price" class="small text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Description" class="mb-1"></label>
                <textarea asp-for="Description" class="form-control" rows="5" placeholder="Описание..."></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
                <div class="text-center">
                    @if (ViewData["id"] == null)
                    {
                        <input class="btn btn-primary px-4 mt-3" type="submit" value="Добави" />
                    }
                    else
                    {
                        <input class="btn btn-primary px-4 mt-3" type="submit" value="Редактирай" />
                    }
            </div>
        </form>
    </div>
</div>