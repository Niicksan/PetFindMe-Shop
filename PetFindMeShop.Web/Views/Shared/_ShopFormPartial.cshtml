@model ShopFormViewModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group mb-2">
                <label asp-for="Name" class="mb-1"></label>
                <input asp-for="Name" class="form-control" placeholder="PetFindMe Shop">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="ShopImageName" class="mb-1"></label>
                <input asp-for="ShopImageName" class="form-control" placeholder="https://...">
                <span asp-validation-for="ShopImageName" class="small text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Description" class="mb-1"></label>
                <textarea asp-for="Description" class="form-control" rows="5" placeholder="Ние Предлагаме..."></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="text-center">
                @if (Model.Name == null)
                {
                    <input class="btn btn-primary px-4 mt-3" type="submit" value="Създай" />
                }
                else
                {
                    <input class="btn btn-primary px-4 mt-3" type="submit" value="Редактирай" />
                }
            </div>
        </form>
    </div>
</div>