<div class="col-lg-4 mb-3 d-flex">
    <div class="product-content shadow bg-white rounded">
        <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.Id" style="color: black; text-decoration: none;">
            <div class="product-content shadow bg-white rounded">
                <div class="d-flex justify-content-center align-items-center">
                    <img class="product-img img-height-75" src="@Model.ImageName" alt="@Model.Title">
                </div>
                <div class="card-body text-center index-product-info">
                    <h4 style="min-height: 3rem; font-weight:400; font-size: 1.2rem;">@Model.Title</h4>
                    <h6>
                        <b>Цена: @($"{Model.Price:f2}") лв.</b>
                    </h6>
                    <br />
                </div>    
            </div>
        </a>
        <partial name="_AddToCartPartial" model="@Model" />
    </div>
</div>