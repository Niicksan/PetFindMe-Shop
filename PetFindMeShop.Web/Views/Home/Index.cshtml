﻿@using PetFindMeShop.Services.Interfaces
@using PetFindMeShop.Web.Infrastructure.Extensions
@model IEnumerable<ProductViewModel>

@inject IManagerService AgentService
@{
    ViewData["Title"] = "Добре дошли!";

    var products = Model.ToList();
    bool isUserManager = await AgentService.AgentExistsByUserIdAsync(User.GetId()!);
}

<div class="mb-4">
    <div class="p-5 bg-light text-center">
        <h1 class="display-4">Добре дошли в магазина на PetFindMe!</h1>
        @if (!products.Any())
        {
            <p class="lead">
                Все още няма добавени продукти
            </p>
        }
    </div>

    <div class="mt-3 mb-3">
        <h2 class="text-center mb-0">Най-продавани продукти</h2>
    </div>

    <div class="row row-cols-4 row-cols-md-4">
        @foreach (var product in products)
        {
            <partial name="_ProductIdexPartial" model="@product" />
        }
    </div>

</div>